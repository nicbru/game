<screen xmlns:action="urn:aviarc:widget:com.aviarc.toronto.widget.core.action:1"  xmlns:app="urn:aviarc:widget:application">
        
    <scene-manager width="100%" height="100%" y-axis="n" class="nowrap" overflow="hidden">
    
        <container position="relative" width="30%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Navigate to Mars"/>
            </container>
        </container>

        <scene position="relative" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene1"  extension="png" frames="40"/>
        
        <container position="relative" width="50%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Travel to Mars"/>
            </container>
        </container>
        
        <scene name="scene2" position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene2" frames="57">
            <range name="landing1" start="27" end="58"/>
            <range name="landing2" start="53" end="58"/>
            <range name="landing3" start="56" end="58"/>
            <container name="landing1Box" right="50" top="50" width="200" height="100" visible="n" class="north-pole default-cursor"/>
            <container name="landing2Box" right="50" top="200" width="200" height="100" visible="n" class="equator default-cursor"/>
            <container name="landing3Box" right="50" top="350" width="200" height="100" visible="n" class="marineris default-cursor"/>
        </scene>
        
        <container position="relative" width="20%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Feed Crew"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
        
        <container position="relative" width="40%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Set up the Colony"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
        
        <container position="relative" width="40%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Logistic"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
        
        <container position="relative" width="40%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Health of the crew"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
        
        <container position="relative" width="40%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Launch spaceship"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
        
        <container position="relative" width="50%" height="100%" class="inline-block outline-grey">
            <container position="absolute" offset="0">
                <text-static position="static" text="Land on Mars"/>
            </container>
        </container>
        
        <!--<scene position="static" width="100%" height="100%" class="inline-block" path="/aviarc/game/www/img/scene3" frames="44"/>-->
    </scene-manager>
    
    <behaviors xmlns="urn:aviarc:widget:com.aviarc.toronto.widget.core.action">
        <when event="scene2.onRange">
            <if>
                <condition test="equal" value1="{$event-parameters.inRange}" value2="true"/>
                <then>
                    <call-widget-method method="{$event-parameters.name}Box.show"/>
                </then>
                <else>
                    <call-widget-method method="{$event-parameters.name}Box.hide"/>
                </else>
            </if>
        </when>
    </behaviors>
</screen>
