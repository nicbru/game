                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
