                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
                <container position="relative" float="left" width="4%" height="80%" margin-left="0.7%" margin-top="3" class="module-space"></container>
            </container>
            <container position="absolute" height="50" width="100" top="15" left="100" class="outline-grey pointer"></container>
        </container>
        
        <container position="relative" float="left" height="23%" width="100%" class="dark">
            <container position="relative" float="left" height="100%" width="5%" class="accordian-bg accordian-bg-hover dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Navigation" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-propulsion dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Propulsion" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-nutrition dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Nutrition" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="65%" class="outline-grey selected-bg">
                <container position="relative" float="left" height="100%" width="7%" class="accordian-landing-site">
                    <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Landing Site" class="large-responsive light rotate-text niveau" />
                </container>
                <container position="absolute" height="90%" width="30%" left="8%" top="5%" class="darker landin-site-image">
                    <text-static position="absolute" right="20px" bottom="10px" text="Valley" class="dark large" />
                </container>
                <container position="absolute" overflow="hidden" height="42%" width="60%" right="1%" top="5%" class="darker">
                    <text-static margin="10" text="There are many variations of passages of Lorem Ipsum available, but the majority have suffered 
                    alteration in some form, by injected humour, or randomised words which don't look even slightly believable. 
                    If you are going to use a passage of Lorem Ipsum, you need to be sure there isn't anything embarrassing hidden in the 
                    middle of text." class="light"/>
                </container>
                <container position="absolute" height="42%" width="60%" right="1%" bottom="5%" class="darker">
                    <container position="relative" float="left" height="100%" width="20%" margin-left="2%" class="image"></container> 
                    <container position="relative" float="left" height="100%" width="20%" margin-left="6%" class="image"></container> 
                    <container position="relative" float="left" height="100%" width="20%" margin-left="6%" class="image"></container> 
                </container>
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-equipment dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Equipment" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-health dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Health" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-launching dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="200%" text="Launching" class="large-responsive light rotate-text niveau" />
            </container>
            <container position="relative" float="left" height="100%" width="5%" class="accordian-landing-method dark outline-grey">
                <text-static position="absolute" bottom="95%" left="15px" width="220%" text="Landing Method" class="large-responsive light rotate-text niveau" />
            </container>
        
        </container>
        
        
        <behaviors xmlns="urn:aviarc:widget:com.aviarc.toronto.widget.core.action">
            <when system-event="onBindComplete">
                <call-widget-method method="{@name}-add-selected-class.run"/>
                <call-widget-method method="{@name}-statusList.rerender"/>
            </when>
            <when dataset-event="features.onContentsReplaced">
                <call-widget-method method="{@name}-add-selected-class.run"/>
                <call-widget-method method="{@name}-statusList.rerender"/>
            </when>
            <action name="{@name}-add-selected-class">
                <dataset:dataset-iterator dataset="capabilities">
                    <dataset:dataset-iterator dataset="features">
                        <if>
                            <condition test="equal" value1="{$capabilities.id}" value2="{$features.parent-id}"/>
                            <then>
                                <set-field field="capabilities._selected-class" value="selected"/>
                            </then>
                        </if>
                    </dataset:dataset-iterator>
                </dataset:dataset-iterator>
            </action>
            <when event="{@name}.onUpdate">
                <call-ajax-workflow name="composition/selection/refresh" show-timer="n"/>
            </when>
        </behaviors>
    </support:datacontext>
</container>