<container
    position="{@position}"
    width="{@width}"
    height="{@height}"
    left="{@left}"
    right="{@right}"
    top="{@top}"
    bottom="{@bottom}"
    margin="{@margin}"
    margin-top="{@margin-top}"
    margin-bottom="{@margin-bottom}"
    margin-left="{@margin-left}"
    margin-right="{@margin-right}"
    padding="{@padding}"
    padding-top="{@padding-top}"
    padding-bottom="{@padding-bottom}"
    padding-left="{@padding-left}"
    padding-right="{@padding-right}">
    <content id="main"/>
    <container position="absolute" left="20" top="20" width="80" height="80">
        <button name="menu" label="Menu" position="static" width="80" height="40"/>
    </container>
    <behaviors xmlns="urn:aviarc:widget:com.aviarc.toronto.widget.core.action">
        <when event="menu.onClick">
            <do-action action="Next"/>
        </when>
    </behaviors>
</container>